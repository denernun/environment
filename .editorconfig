# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_style = spaces
indent_size = 2
tab_width = 2

[*.css]
indent_style = spaces
indent_size = 2
tab_width = 2

[*.scss]
indent_style = spaces
indent_size = 2
tab_width = 2

[*.json]
indent_style = spaces
indent_size = 2
tab_width = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
